#!/bin/sh
#
# This is a sample configure script for Libra,
# For a MacBook Pro laptop with various dependencies installed via MacPorts.
# 

../configure \
    FC=gfortran-mp-4.4 \
    CPPFLAGS="-DVTK_EXCLUDE_STRSTREAM_HEADERS -DOMPI_SKIP_MPICXX" \
    CXXFLAGS="-g3 -O2 -Wall" \
    --with-boost="/opt/local" \
    --prefix=/Users/gamblin2/opt/libra \
    --with-python=/opt/local/bin/python2.6 \
    --with-vtk=/opt/local \
    --with-vtk-version=5.6



#!/bin/sh
#
# This is a sample configure script for Libra,
# For a MacBook Pro laptop with various dependencies installed via MacPorts.
# 

../configure \
    FC=gfortran-mp-4.3 \
    CXX=mpicxx \
    CPPFLAGS="-g3 -O3 -Wall -DVTK_EXCLUDE_STRSTREAM_HEADERS" \
    --with-boost="/opt/local" \
    --prefix=${HOME}/opt/libra \
    --with-vtk=/opt/local \
    --with-vtk-version=5.2

#    --with-python=/opt/local/Library/Frameworks/Python.framework 
#    --with-python-version=2.5


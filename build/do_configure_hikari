#!/bin/sh
#
# This is a sample configure script for Libra,
# For a PowerBook G4.
# 

../configure \
    CXX=mpicxx \
    CPPFLAGS="-g3 -O3 -Wall -DVTK_EXCLUDE_STRSTREAM_HEADERS" \
    --with-boost="/opt/local" \
    --prefix=/Users/tgamblin/opt/libra \
    --with-python=/opt/local/Library/Frameworks/Python.framework \
    --with-python-version=2.4 \
    --with-vtk=/Users/tgamblin/opt/vtk \
    --with-vtk-version=5.3



#!/bin/sh
#
# This is a sample configure script for the BGL front-end nodes.
# 

../configure \
    CXX=g++ \
    CXXFLAGS="-g3 -O3" \
    --prefix=${HOME}/opt/libra/${SYS_TYPE} \
    --with-elf=${HOME}/opt/libelf/${SYS_TYPE} \
    --with-dwarf=${HOME}/opt/libdwarf/${SYS_TYPE} \
    --with-paradyn=${HOME}/projects/dawn-sw/sw-bgp-port/ppc32_linux \
    --with-boost=${HOME}/opt/boost


